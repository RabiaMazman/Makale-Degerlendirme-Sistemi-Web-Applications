@model MakaleDegerlendirmeSistemi.ViewModels.MakaleYonlendirAlanEditoru

@{
    ViewBag.Title = "MakaleYonlendirBasEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("MakaleYonlendirAlanEditoru", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Makaleler</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MakaleID)

        <div class="form-group">
            @Html.LabelFor(model => model.MakaleBaslik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MakaleBaslik, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MakaleBaslik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MakaleAciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MakaleAciklama, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MakaleAciklama, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Hakemler1", new SelectList(ViewBag.Hakemler1, "Value", "Text"), "Hakem 1 Seçiniz", htmlAttributes: new {@id="hakemler1select", @class = "form-control",@onchange= "dropdownList1SelectChanged()" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Hakemler2", new SelectList(ViewBag.Hakemler1, "Value", "Text"), "Hakem 2 Seçiniz", htmlAttributes: new { @id = "hakemler2select", @class = "form-control", @onchange = "dropdownList2SelectChanged()" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Hakemler3", new SelectList(ViewBag.Hakemler1, "Value", "Text"), "Hakem 3 Seçiniz", htmlAttributes: new { @id = "hakemler3select", @class = "form-control", @onchange = "dropdownList3SelectChanged()" })
            </div>
        </div>
      <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
              <p style="color:red;" id="kontrol"></p>
           </div>
      </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" id="btnKaydet" class="btn btn-success" />
            </div>
        </div>

        <script>
            function dropdownList1SelectChanged() {
                var drop1 = document.getElementById("hakemler1select").value;
                var drop2 = document.getElementById("hakemler2select").value;
                var drop3 = document.getElementById("hakemler3select").value;
                if(drop1 != drop2 && drop2 != drop3 && drop1 != drop3)
                {
                    document.getElementById("kontrol").innerHTML = "";
                    document.getElementById("btnKaydet").disabled = false;
                }
                else
                {
                    document.getElementById("kontrol").innerHTML = "Aynı hakemler seçilemez.";
                    document.getElementById("btnKaydet").disabled = true;
                }
            }
            function dropdownList2SelectChanged() {
                var drop1 = document.getElementById("hakemler1select").value;
                var drop2 = document.getElementById("hakemler2select").value;
                var drop3 = document.getElementById("hakemler3select").value;
                if (drop1 != drop2 && drop2 != drop3 && drop1 != drop3) {
                    document.getElementById("kontrol").innerHTML = "";
                    document.getElementById("btnKaydet").disabled = false;
                }
                else {
                    document.getElementById("kontrol").innerHTML = "Aynı hakemler seçilemez.";
                    document.getElementById("btnKaydet").disabled = true;
                }
            }
            function dropdownList3SelectChanged() {
                var drop1 = document.getElementById("hakemler1select").value;
                var drop2 = document.getElementById("hakemler2select").value;
                var drop3 = document.getElementById("hakemler3select").value;
                if (drop1 != drop2 && drop2 != drop3 && drop1 != drop3) {
                    document.getElementById("kontrol").innerHTML = "";
                    document.getElementById("btnKaydet").disabled = false;
                }
                else {
                    document.getElementById("kontrol").innerHTML = "Aynı hakemler seçilemez.";
                    document.getElementById("btnKaydet").disabled = true;
                }
            }
        </script>

    </div>
}












