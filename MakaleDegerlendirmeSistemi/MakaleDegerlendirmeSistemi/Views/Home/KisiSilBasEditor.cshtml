        </dt>

        <dd>
            @Html.DisplayFor(model => model.RolAdi)
        </dd>

    </dl>

    @using (Html.BeginForm("KisiSilBasEditor", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Kişi Listesine Geri Dön", "KisiListeleBasEditor")
